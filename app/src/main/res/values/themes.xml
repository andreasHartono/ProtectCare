<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProtectCare04" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_info</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_class</item>
        <item name="colorSecondaryVariant">@color/blue_class</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="Header1">
        <item name="fontFamily">@font/fira_sans_bold</item>
        <item name="android:textSize">48sp</item>
    </style>
    <style name="SubHeader">
        <item name="fontFamily">@font/merriweather</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Body">
        <item name="fontFamily">@font/fira_sans_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Body2">
        <item name="fontFamily">@font/merriweather</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="SubHeader2">
        <item name="fontFamily">@font/fira_sans_bold</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>